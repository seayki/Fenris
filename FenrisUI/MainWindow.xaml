<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FenrisUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Fenris.Models"
    xmlns:localUI="using:FenrisUI"
    xmlns:UIModels="using:FenrisUI.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FenrisUI">
    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid x:Name="LoadingGrid" Background="White">
            <ProgressRing IsActive="True"
                          Width="80" Height="80"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
        </Grid>
        <Grid x:Name="AppContentGrid" Visibility="Collapsed">
            <StackPanel Margin="0, 0, 0, 0" Background="#ffffff">
            <!-- Custom header with an icon and text -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0" Background="#3e3d6d" Height="70">
                <Image Source="/Assets/FenrisBlockIcon.png" Width="30" Height="30" Margin="40,0,10,0" VerticalAlignment="Center"/>
                <TextBlock VerticalAlignment="Center" FontSize="24">
                      <Span FontSize="26" FontWeight="Medium" Foreground="#ffffff">Fenris</Span>
                    <Span FontSize="26" FontWeight="Medium" Foreground="#ffffff">Block</Span>
                </TextBlock>
            </StackPanel>
                <Pivot Margin="40, 20, 40, 0" Padding="10" HorizontalAlignment="Center">
                    <PivotItem Header="Apps" Background="#ffffff" Padding="20" Margin="0, 20, 0, 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Grid.Column="0" Spacing="20" VerticalAlignment="Center" Margin="20, 0, 0, 0">
                                <TextBlock Text="Select Apps To Block" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                                <Border 
                                     Background="#ffffff" 
                                     VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBox x:Name="TagInput" Width="200" PlaceholderText="Add filter" Padding="10"/>
                                        <Button Content="Add" Click="AddTag_Click"
                                    Height="30"
                                    Padding="10,5"
                                    Background="#5566FF"
                                    Margin="10, 0, 0, 0"/>
                                        <!-- Tag List with ScrollViewer -->
                                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxWidth="500" Padding="10,0,10,0">
                                            <ItemsControl x:Name="TagList" ItemsSource="{x:Bind Tags, Mode=OneWay}" VerticalAlignment="Center" MaxHeight="36">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" Spacing="6"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Background="#eeeeee" CornerRadius="6" Margin="0" RowSpacing="5" Padding="8,3,5,3">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="{Binding}" FontSize="12" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                                            <Button Grid.Column="1" Click="RemoveTag_Click" Tag="{Binding}" Width="20" Height="20" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Padding="0">
                                                                <FontIcon 
                                     Glyph="" 
                                     FontFamily="Segoe Fluent Icons" 
                                     FontSize="12" 
                                     Foreground="#0a0a0a" 
                                     VerticalAlignment="Center"
                                         />
                                                            </Button>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </StackPanel>


                            <Button Grid.Row="0" Grid.Column="1" Margin="0,0,20,0" Height="40" Click="UpdateApps_Click" Foreground="#0a0a0a" CornerRadius="20" Background="#5566FF" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <!-- Save Icon using FontIcon -->
                                    <FontIcon 
                                    Glyph="" 
                                    FontFamily="Segoe Fluent Icons" 
                                    Foreground="#0a0a0a" 
                                    FontSize="16" 
                                    VerticalAlignment="Center"/>
                                    <!-- Button Text -->
                                    <TextBlock Text="Save Changes" VerticalAlignment="Center" FontWeight="Medium" FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <ListView Grid.ColumnSpan="2" Grid.Row="1" ItemsSource="{x:Bind Processes, Mode=OneWay}" 
                                        IsItemClickEnabled="True" ItemClick="ProcessList_ItemClick" 
                                        Name="ProcessList" SelectionMode="None" Margin="0, 30, 0, 0"
                                        MaxHeight="600">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Process">
                                        <StackPanel Orientation="Vertical" Margin="10, 10, 10, 10" Width="150" CornerRadius="10" Padding="10" Background="#e4e5e7">
                                            <Image Source="{x:Bind IconUrl}" Width="100" Height="48"/>
                                            <TextBlock Text="{x:Bind Name}" FontSize="14" TextAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontFamily" Value="{StaticResource RobotoFontFamily}" />
                                                        <Setter Property="Foreground" Value="#FF1D1D1F" />
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </PivotItem>



                    <PivotItem Header="Schedule" Background="#ffffff" Padding="20" Margin="0, 20, 0, 0">
                    <!-- Block Status -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,0"
                 HorizontalAlignment="Left">
                        <Border Padding="0" Background="White" CornerRadius="20">
                            <Grid HorizontalAlignment="Center" MaxWidth="2010">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!-- Title -->
                                <Grid Grid.Row="0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Title and Icon -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock FontSize="20" Text="Block Schedule" FontWeight="Medium"/>
                                        <FontIcon Glyph="" FontFamily="Segoe MDL2 Assets" FontSize="24"/>
                                        <TextBlock FontSize="14" Text="(Select days and timeframes)" VerticalAlignment="Center" FontWeight="Medium"/>
                                        <TextBlock Text="Block Status" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <Ellipse Width="12" Height="12" VerticalAlignment="Center" Fill="{x:Bind BlockStatusColor, Mode=OneWay}"/>
                                    </StackPanel>
                                    <!-- Pushes the button to the right -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                                        <Button Margin="0,10,20,0" Height="40" Click="UpdateSchedule_Click" Foreground="#0a0a0a" CornerRadius="20" Background="#5566FF">
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <!-- Enhanced Shield Icon -->
                                                <Path 
                                     Data="M6,0 L9,2 C10,3 11,5 11,6 V9 C11,10 10,11 9,11.5 L6,12 C5,12 4,11.5 3,11 V6 C3,5 4,3 5,2 L6,0 Z M6,1 C5.5,1 5,2 5,3 V9 C5,10 5.5,11 6,11 C6.5,11 7,10 7,9 V3 C7,2 6.5,1 6,1 Z" 
                                     Fill="#0a0a0a" 
                                     Width="12" 
                                     Height="12" 
                                     VerticalAlignment="Center"
                                     Stretch="Uniform"/>
                                                <!-- Button Text -->
                                                <TextBlock Text="Save Schedule" VerticalAlignment="Center" FontWeight="Medium" FontSize="14"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <!-- Seven Day Cubes -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" MaxHeight="600" Margin="0, 30, 0, 0">
                                        <VariableSizedWrapGrid Orientation="Horizontal" HorizontalAlignment="Stretch" x:Name="DayWrapPanel">
                                            <!-- Monday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Monday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Monday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="MondayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <!-- Tuesday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Tuesday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Tuesday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="TuesdayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <!-- Wednesday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Wednesday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Wednesday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="WednesdayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <!-- Thursday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Thursday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Thursday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="ThursdayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <!-- Friday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Friday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Friday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="FridayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <!-- Saturday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Saturday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Saturday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="SaturdayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <!-- Sunday -->
                                            <StackPanel Orientation="Vertical" Spacing="5" Margin="10">
                                                <Button Content="Sunday" Width="270" Height="50" FontSize="24" FontWeight="Medium" Click="DayButton_Click" Tag="Sunday" Background="#f3f3f9" CornerRadius="15" Opacity="0.6"/>
                                                <StackPanel x:Name="SundayTimePickers" Orientation="Vertical" Spacing="0" Visibility="Collapsed"/>
                                            </StackPanel>
                                        </VariableSizedWrapGrid>
                                    </ScrollViewer>
                                </Grid>
                        </Border>
                    </StackPanel>
                </PivotItem>
                    <PivotItem Header="Websites" Padding="20" Margin="0, 20, 0, 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Spacing="10" Width="Auto" MaxWidth="1350">
                                <TextBlock Text="Enter Websites To Block" FontSize="22" FontWeight="Medium" Margin="0, 0, 0, 10" HorizontalAlignment="Center"/>
                                <!-- Grid to hold TextBox and Button -->
                                <Grid MaxWidth="1000" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="WebsiteTextBox"
                                             Grid.Column="0"
                                             PlaceholderText="example.com"
                                             Padding="10"
                                             Width="1100" 
                                             MaxWidth="1400"
                                             HorizontalAlignment="Stretch"
                                             KeyDown="AddWebsite_KeyDown"/>
                                    <Button x:Name="AddBlockButton"
                                            Grid.Column="1"
                                            Height="30"
                                            Content="Add"
                                            Margin="10,0,0,0"
                                            Padding="10,5"
                                            Background="#5566FF"
                                            Click="AddUrlBlock_Click"/>
                                </Grid>
                                <GridView x:Name="BasicGridView"
                                          ItemsSource="{x:Bind Labels, Mode=OneWay}" 
                                          IsItemClickEnabled="True"
                                          SelectionMode="Single"
                                          HorizontalAlignment="Center"
                                          Margin="0, 10, 0, 10"
                                          MaxWidth="1000">
                                    <GridView.ItemTemplate >
                                        <DataTemplate x:DataType="UIModels:WebsiteCategory">
                                            <Button HorizontalAlignment="Center" Padding="4" Margin="5" Click="ApplyLabelBlock_Click" Tag="{x:Bind Label}" Width="120">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="{x:Bind Icon.Glyph}" FontSize="10" />
                                                    <TextBlock Text="{x:Bind Label}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>
                                <StackPanel HorizontalAlignment="Center" Spacing="20">
                                    <TextBlock Text="Blocked Websites" FontSize="20" FontWeight="Medium" HorizontalAlignment="Center"/>
                                    <TextBlock Text="(Change between following schedule or permanent block)." FontSize="12" FontWeight="Medium" HorizontalAlignment="Center"/>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" MaxHeight="250">
                                        <ListView ItemsSource="{x:Bind urlBlocks}" SelectionMode="None">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapGrid Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="UIModels:UrlBlock">
                                                    <StackPanel Orientation="Horizontal" MinWidth="400" Margin="5">
                                                        <Grid Width="400">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0" Background="#ececec" Padding="10, 0, 0, 0" CornerRadius="10">
                                                                <Image Width="16" Height="16" Source="{x:Bind Icon, Mode=TwoWay}" />
                                                                <TextBlock Text="{x:Bind Url}" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <Button Content="{x:Bind BlockType, Mode=TwoWay}"
                                                                    MinWidth="100"
                                                                    Margin="10, 0, 0, 0"
                                                                    Background="{x:Bind BackgroundColor}"
                                                                    VerticalAlignment="Center" 
                                                                    Click="UpdateBlockTypeButton_Click"
                                                                    CornerRadius="5"
                                                                    Grid.Column="1"/>
                                                            <Button Content="Remove" 
                                                                    Tag="{x:Bind Url}"
                                                                    VerticalAlignment="Center" 
                                                                    HorizontalAlignment="Center"
                                                                    Margin="10, 0, 0, 0" 
                                                                    Grid.Column="2" 
                                                                    CornerRadius="5"
                                                                    Click="RemoveWebBlock_Click"
                                                                    Background="#b93d37"/>
                                                        </Grid>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </ScrollViewer>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </PivotItem>
            </Pivot>
        </StackPanel>
        <Border x:Name="SuccessMessageBorder"
        Width="500"
        Background="Transparent"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Visibility="Visible"
        Margin="0,150,0,0">
            <InfoBar x:Name="ErrorInfoBar"
         Message="This URL is already blocked."
         Severity="Warning"
         IsOpen="False"
         Margin="0,10,0,0"/>
        </Border>
        </Grid>
    </Grid>
</Window>